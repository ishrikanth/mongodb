<p id="notice"><%= notice %></p>

<h1>Book People</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_people.each do |book_person| %>
      <tr>
        <td><%= book_person.person %></td>
        <td><%= book_person.book %></td>
        <td><%= link_to 'Show', book_person %></td>
        <td><%= link_to 'Edit', edit_book_person_path(book_person) %></td>
        <td><%= link_to 'Destroy', book_person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

